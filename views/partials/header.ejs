<!-- Login Modal -->
<div id="loginModal" class="modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h3>Login to Your Account</h3>
        <form id="loginForm">
            <div class="form-group">
                <input type="email" name="email" id="loginEmail" placeholder="Email Address" required>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="loginPassword" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <p class="modal-footer">Don't have an account? <a href="#hero">Apply now</a></p>
    </div>
</div>
<!-- Logout Confirmation Modal -->
<div id="logoutModal" class="logout-modal">
    <div class="logout-modal-content">
        <h3>Confirm Logout</h3>
        <p>Are you sure you want to log out?</p>
        <div class="logout-actions">
            <button id="cancelLogout" class="btn btn-cancel">Cancel</button>
            <button id="confirmLogout" class="btn btn-confirm">Logout</button>
        </div>
    </div>
</div>